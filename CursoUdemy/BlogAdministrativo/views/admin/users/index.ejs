<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <div class="container">
                <hr>
                <h2>Usuários</h2>
                <a class="btn btn-success" href="/admin/users/create">Criar novo Usuário</a>
                <hr>
                <table class="table table-dark table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            

                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user=> { %>

                            <tr>
                                <td>
                                    <%= user.id %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                
                               
                            </tr>

                            <% }) %>
                    </tbody>
                </table>
            </div>
        </body>

        <%- include('../../partials/footer.ejs') %>
            <script>
                function confirmarDelecao(event, form) {
                    event.preventDefault();
                    var decision = confirm("Você quer deletar está categoria?");
                    if (decision) {
                        console.log("Categoria deve ser deletada");
                        form.submit();
                    } else {
                        console.log("Categoria não deve ser deletada");
                    }

                }
            </script>