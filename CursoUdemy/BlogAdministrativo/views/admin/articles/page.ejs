<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/homenavbar.ejs') %>


        <body>


            <div class="container">
                <hr>

                <% result.articles.rows.forEach(article=> {%>
                    <div class="card">
                        <div class="card-header">
                            <%= article.title %>
                        </div>

                        <div class="card-body">
                            <a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
                        </div>
                        <% }) %>
                    </div>

            </div>
            <div class="row">
                <div class="col col-12">
                    <% if(result.page> 1) { %>
                        <a style="float: left; color: black;" href="/articles/page/<%= result.page - 1 %>">Prev
                            <<< </a>
                                <%} %>

                                    <% if(result.next) { %>


                                        <a style="float: right; color: black;"
                                            href="/articles/page/<%= result.page + 1 %>">Next >>> </a>
                                        <%} else {%>
                                            <a style="float: right; color: black;" href="/">Home </a>
                                            <% } %>
                </div>

            </div>
        </body>



        <%- include('../../partials/footer.ejs') %>