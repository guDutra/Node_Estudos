<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>

            <div class="container">
                <div class="card">
                    <div class="card-header">
                        <br>
                        <h2>Novo Artigo</h2>
                    </div>
                    <div class="card-body">
                        <form action="/articles/save" method="post">
                            <input class="form-control" type="text" name="title" id="title"
                                placeholder="Defina o titulo do artigo">
                            <br>
                            <textarea class="form-control" placeholder="Escreve o artigo aqui" name="body" id="article"
                                cols="30" rows="10"></textarea>
                            <br>
                            <label for="categoryId">Categoria:</label>
                            <select class="form-control form-select" name="categoryId" id="categoryId">
                                <% categories.forEach(categories=> { %>
                                    <option value="<%=categories.id%>">
                                        <%=categories.title%>
                                    </option>

                                    <% }) %>
                            </select>
                            <br>
                            <button class="btn btn-success" type="submit">Cadastrar</button>
                        </form>
                    </div>
                </div>
            </div>
        </body>

        <%- include('../../partials/footer.ejs') %>
            <script src="/tinymce/tinymce.min.js"></script>
            <script>
                tinymce.init({
                    language: 'pt_BR',
                    selector: '#article'
                    ,
                    plugins:
                        'Advlist Autolink Link Image Lists Print Preview hr Searchreplace Wordcount Fullscreen Insertdatetime media save table paste emoticons'

                })
            </script>