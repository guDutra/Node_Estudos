<%- include('partials/header.ejs') %>

    <body>
        <%- include('partials/navbar.ejs') %>

            <div class="container">
                <hr>
                <h1>
                    <%= pergunta.titulo %>
                </h1>
                <p>
                    <%= pergunta.description %>
                </p>
                <hr>
                <h3>Responda</h3>
                <form method="post" action="/responder">
                    <label for="corpo">Resposta:</label>
                    <textarea placeholder="Digite sua resposta" name="corpo" class="form-control" rows="6"></textarea>
                    <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
                    <br>
                    <button type="submit" class="btn btn-success">Responder</button>
                </form>
                <hr>
                <h3>Respostas</h3>
                <% respostas.forEach(resposta => {%>
                    <div class="card">
                        <div class="card-body">
                            <p> <%= resposta.corpo %></p>
                        </div>
                    </div>
                    <br>
                    <%}) %>
            </div>
    </body>

    <%- include('partials/footer.ejs') %>